<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/omnicore_history_command"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:text="Command"
            android:textAlignment="viewStart"
            android:textSize="13dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/omnicore_history_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:text="12/12/2019 12:34:56PM"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/omnicore_history_runtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="100ms"
            android:textAlignment="viewEnd"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/omnicore_history_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="Success"
            android:textAlignment="viewEnd"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView

            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="RL"
            android:textAlignment="viewStart"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/omnicore_history_rssi_rl_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text="-56db"
            android:textAlignment="center"
            android:textSize="9dp" />

        <ProgressBar
            android:id="@+id/omnicore_history_rssi_rl_chart"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:max="100"
            android:progress="56"
            android:progressTint="#DD0B0B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView

            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="Pod"
            android:textAlignment="viewStart"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/omnicore_history_rssi_pod_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text="-88db"
            android:textAlignment="center"
            android:textSize="9dp" />

        <ProgressBar
            android:id="@+id/omnicore_history_rssi_pod_chart"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:max="100"
            android:progress="88"
            android:progressTint="#FFFFFF" />

    </LinearLayout>
</LinearLayout>